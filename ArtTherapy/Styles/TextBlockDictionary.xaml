<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Brullov.Mobile.UWP.Styles">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="ms-appx:///Colors/ColorsDictionary.xaml"/>
    </ResourceDictionary.MergedDictionaries>
    
    <Style TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="Foreground" Value="{StaticResource Static.TextBlock.Foreground}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style.Setters>
    </Style>

</ResourceDictionary>
